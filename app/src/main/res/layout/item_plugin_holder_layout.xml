<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/global_item_background"
    android:padding="15dp">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_toStartOf="@+id/iv"
        android:ellipsize="end"
        android:lineSpacingMultiplier="1.21"
        android:maxLines="2"
        android:text="习近平出席中法全球理论坛闭幕式并致辞习近平出席中法全球理论坛闭幕式并致辞"
        android:textColor="#3B424C"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv"
        android:layout_alignParentStart="true"
        android:text="政治前沿"
        android:textColor="#A0A4A9"
        android:textSize="10sp" />

    <ImageView
        android:id="@+id/iv"
        android:layout_width="113dp"
        android:layout_height="75dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_2b" />

</RelativeLayout>